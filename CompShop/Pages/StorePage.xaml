<Page x:Class="CompShop.Windows.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompShop.Windows"
      mc:Ignorable="d" 
      
      d:DesignHeight="500" 
      d:DesignWidth="900"
      
      Title="StorePage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0"
              Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="2.5*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="txtBoxSearch"
                     HorizontalContentAlignment="Right"
                     Grid.Column="0"
                     Grid.Row="0"
                     TextChanged="txtBoxSearch_TextChanged"/>
        </Grid>

        <Button x:Name="btnAdd"
        Content="+"
        Grid.Column="1"
        Grid.Row="0"
        Click="btnAdd_Click"/>

        <ListView x:Name="lViewStores"
       ScrollViewer.HorizontalScrollBarVisibility="Disabled"
       HorizontalAlignment="Center"
       BorderThickness="0"
       Grid.Column="0"
       Grid.Row="1"
       Grid.ColumnSpan="2">

            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"/>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1"
                 BorderBrush="Black">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="207"/>
                                <ColumnDefinition Width="207"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                                <RowDefinition Height="25"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="№ Магазина:"
                   TextWrapping="Wrap"
                   Grid.Column="0"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>

                            <TextBox Text="{Binding StoreId}"
                 Grid.Column="1"
                 Grid.Row="0"
                 IsReadOnly="True"
                 Background="Transparent"/>

                            <TextBlock Text="Название:"
                   Grid.Column="0"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

                            <TextBox  Text="{Binding StoreName}"
                 Grid.Column="1"
                 Grid.Row="1"/>


                            <TextBlock Text="Адрес:"
                   Grid.Column="0"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

                            <TextBox Text="{Binding Address}"
                 Grid.Column="1"
                 Grid.Row="2"/>

                            <TextBlock Text="Телефон:"
                   Grid.Column="0"
                   Grid.Row="3"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"/>

                            <TextBox Text="{Binding Phone}"
                 Grid.Column="1"
                 Grid.Row="3"/>


                            <Button x:Name="btnEdit"
                             Content="&#9999;"
                             Grid.Column="0"
                             Grid.Row="4"
                             Click="btnEdit_Click"/>

                            <Button x:Name="btnDelete"
                             Content="&#10005;"
                             Grid.Column="1"
                             Grid.Row="4"
                             Click="btnDelete_Click"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>